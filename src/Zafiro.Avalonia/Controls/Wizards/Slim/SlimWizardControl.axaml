<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <SlimWizardControl Width="500">
            <SlimWizardControl.Wizard>
                <WizardDesign />
            </SlimWizardControl.Wizard>
        </SlimWizardControl>
    </Design.PreviewWith>

    <Style Selector="SlimWizardControl">
        <Setter Property="Template">
            <ControlTemplate>
                <DockPanel VerticalSpacing="10">
                    <WizardHeader DockPanel.Dock="Top" />
                    <ContentControl Padding="{TemplateBinding Padding}"
                                    Content="{Binding $parent[SlimWizardControl].Wizard.CurrentPage.Content}" />
                </DockPanel>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>