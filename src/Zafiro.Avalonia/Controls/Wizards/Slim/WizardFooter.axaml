<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:slim="clr-namespace:Zafiro.Avalonia.Controls.Wizards.Slim"
        xmlns:avconv="clr-namespace:Avalonia.Data.Converters;assembly=Avalonia.Base">

    <Design.PreviewWith>
        <slim:WizardFooter Width="400">
            <slim:WizardFooter.Wizard>
                <slim:WizardDesign />
            </slim:WizardFooter.Wizard>
        </slim:WizardFooter>
    </Design.PreviewWith>

    <Styles.Resources>
        <ControlTheme x:Key="{x:Type slim:WizardFooter}" TargetType="slim:WizardFooter">
            <Setter Property="Template">
                <ControlTemplate>
                    <Grid ColumnDefinitions="*, Auto, *">
                        <EnhancedButton Content="Cancel"
                                        Grid.Column="0"
                                        HorizontalAlignment="Left"
                                        Command="{Binding $parent[slim:WizardFooter].Cancel}"
                                        IsVisible="{Binding $parent[slim:WizardFooter].Cancel, Converter={x:Static avconv:ObjectConverters.IsNotNull}}" />
                        <ContentPresenter Grid.Column="1" Content="{Binding $parent[slim:WizardFooter].CurrentFooter}" HorizontalAlignment="Center" />
                        <StackPanel Grid.Column="2"
                                    Orientation="Horizontal"
                                    Spacing="8"
                                    HorizontalAlignment="Right">
                            <EnhancedButton Content="Back"
                                            Classes="VisibleWhenEnabled"
                                            Command="{Binding $parent[slim:WizardFooter].Wizard.Back}" />
                            <EnhancedButton Content="{Binding $parent[slim:WizardFooter].Wizard.Next.Text, TargetNullValue='Next'}"
                                            Command="{Binding $parent[slim:WizardFooter].Wizard.Next}" />
                        </StackPanel>
                    </Grid>
                </ControlTemplate>
            </Setter>
        </ControlTheme>
    </Styles.Resources>
</Styles>