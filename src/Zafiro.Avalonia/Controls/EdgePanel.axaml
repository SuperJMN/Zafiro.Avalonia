<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Design.PreviewWith>
        <StackPanel Spacing="20">
            <!-- Uso -->
            <EdgePanel Height="50" Width="300">
                <EdgePanel.StartContent>
                    <TextBlock Background="Green" Padding="10">ICON</TextBlock>
                </EdgePanel.StartContent>
                <EdgePanel.Content>
                    <TextBlock Background="Yellow" Padding="10">VERY BIG CONTENTCONTENT</TextBlock>
                </EdgePanel.Content>
                <EdgePanel.EndContent>
                    <TextBlock Background="Blue" Padding="10">ICON</TextBlock>
                </EdgePanel.EndContent>
            </EdgePanel>
            <EdgePanel CornerRadius="15" BorderBrush="Black" BorderThickness="1" Background="Red" Padding="15" StartContent="START" Content="CONTENT" EndContent="END"></EdgePanel>
        </StackPanel>
    </Design.PreviewWith>

    <Styles.Resources>

        <ControlTheme x:Key="{x:Type EdgePanel}" TargetType="{x:Type EdgePanel}">
            <Setter Property="Spacing" Value="10" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Template">
                <ControlTemplate>
                    <Border CornerRadius="{TemplateBinding CornerRadius}" Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid ColumnSpacing="{TemplateBinding Spacing}" ColumnDefinitions="Auto * Auto">
                            <ContentPresenter x:Name="StartContent"
                                              ClassAssist.ChildClasses="{TemplateBinding StartContentClasses}"
                                              IsVisible="{Binding $self.Content, Converter={x:Static ObjectConverters.IsNotNull}}"
                                              ContentTemplate="{TemplateBinding StartContentTemplate}"
                                              Content="{TemplateBinding StartContent}" />
                            <ContentPresenter Grid.Column="1" x:Name="MainContent" VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                              ClassAssist.ChildClasses="{TemplateBinding ContentClasses}"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              ContentTemplate="{TemplateBinding ContentTemplate}"
                                              IsVisible="{Binding $self.Content, Converter={x:Static ObjectConverters.IsNotNull}}"
                                              Content="{TemplateBinding Content}" />
                            <ContentPresenter Grid.Column="2" x:Name="EndContent"
                                              ClassAssist.ChildClasses="{TemplateBinding EndContentClasses}"
                                              ContentTemplate="{TemplateBinding EndContentTemplate}"
                                              IsVisible="{Binding $self.Content, Converter={x:Static ObjectConverters.IsNotNull}}"
                                              Content="{TemplateBinding EndContent}" />
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter>
        </ControlTheme>

    </Styles.Resources>
</Styles>