<DataTemplates xmlns="https://github.com/avaloniaui"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:zslim="clr-namespace:Zafiro.Avalonia.Controls.Wizards.Slim"
               xmlns:converters="clr-namespace:Zafiro.Avalonia.Converters"
               xmlns:slim="clr-namespace:Zafiro.UI.Wizards.Slim;assembly=Zafiro.UI"
               xmlns:ui="clr-namespace:Zafiro.UI;assembly=Zafiro.UI">

    <DataTemplate DataType="slim:ISlimWizard">
        <zslim:SlimWizardControl Wizard="{Binding}" />
    </DataTemplate>

    <DataTemplate DataType="zslim:SlimWizardNavigationHost">
        <zslim:WizardNavigator Wizard="{Binding Wizard}" Cancel="{Binding Cancel}" />
    </DataTemplate>

    <DataTemplate DataType="zslim:WizardHeaderViewModel">
        <zslim:WizardHeader Wizard="{Binding Wizard}" />
    </DataTemplate>

    <DataTemplate DataType="zslim:WizardFooterViewModel">
        <Panel>
            <EnhancedButton Content="Cancel"
                            HorizontalAlignment="Left"
                            Command="{Binding Host.Cancel}"
                            IsVisible="{Binding Host.Wizard.CurrentPage.Kind, Converter={x:Static converters:SlimWizardConverters.CancelVisible}}" />
            <EnhancedButton Content="{Binding Host.Wizard.Next.Text, TargetNullValue='Next'}"
                            Command="{Binding Host.Wizard.Next}"
                            HorizontalAlignment="Right" />
        </Panel>
    </DataTemplate>

    <DataTemplate DataType="ui:IIcon">
        <Border x:Name="IconBorder"
                HorizontalAlignment="{Binding $self.(IconOptions.HorizontalAlignment)}"
                VerticalAlignment="{Binding $self.(IconOptions.VerticalAlignment)}"
                Padding="{Binding $self.(IconOptions.Padding)}"
                CornerRadius="{Binding $self.(IconOptions.CornerRadius)}"
                BorderBrush="{Binding $self.(IconOptions.BorderBrush)}"
                BorderThickness="{Binding $self.(IconOptions.BorderThickness)}"
                Margin="{Binding $self.(IconOptions.Margin)}"
                Background="{Binding $self.(IconOptions.Background)}">
            <Viewbox Height="{Binding $self.(IconOptions.Size)}" Width="{Binding $self.(IconOptions.Size)}">
                <ContentControl ContentTemplate="{StaticResource IconDataTemplate}" Content="{Binding }" />
            </Viewbox>
        </Border>
    </DataTemplate>

</DataTemplates>