<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:pages="clr-namespace:TestApp.Samples.SlimWizard.Subwizard.Pages"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="TestApp.Samples.SlimWizard.Subwizard.Pages.SubwizardSummaryPageView"
             x:DataType="pages:SubwizardSummaryPageViewModel">
    <StackPanel VerticalAlignment="Center" Spacing="10" HorizontalAlignment="Center" Width="420">
        <TextBlock FontSize="16" FontWeight="Bold">Back from the child wizard</TextBlock>
        <TextBlock TextWrapping="Wrap">
            The child wizard returned the following value:
        </TextBlock>
        <Border Background="#22000000" Padding="12" CornerRadius="6">
            <TextBlock Text="{Binding ChildResult}" FontFamily="Consolas" />
        </Border>
        <TextBlock TextWrapping="Wrap" FontStyle="Italic">
            Click Next to finish the parent wizard.
        </TextBlock>
    </StackPanel>
</UserControl>